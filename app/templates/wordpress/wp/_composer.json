{
  "name": "<%= dir %>/wp",
  "description" : "<%= appNameHumanize %> WordPress Installer",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }<% if (pluginWPMLuserID) { %>, {
      "type": "package",
      "package": {
        "name": "wpml/sitepress-multilingual-cms",
        "version": "3.6.2",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://wpml.org/?download=6088&user_id=<%= pluginWPMLuserID %>&subscription_key=<%= pluginWPMLkey %>"
        }
      }
    }<% } if (pluginACFkey) { %>, {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.5.2",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "http://connect.advancedcustomfields.com/index.php?p=pro&a=download&k=<%= pluginACFkey %>"
        }
      }
    }<% } %>
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "4.7",
    "wpackagist-plugin/w3-total-cache": "*",
    "wpackagist-plugin/wordpress-seo": "*"<% if (pluginWPMLuserID) { %>,
    "wpml/sitepress-multilingual-cms": "3.6.2"<% } if (pluginACFkey) { %>,
    "advanced-custom-fields/advanced-custom-fields-pro": "5.5.2"<% } %>
  },
  "extra": {
    "wordpress-install-dir": "wp"
  }
}
