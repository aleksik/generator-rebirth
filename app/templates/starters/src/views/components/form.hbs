---
title: Forms
---

<div class="Container docs-Container">
  <div class="Wrap">

      <!--
       Default separated form with grid
       -->
      <form action="" class="Form Form--primary js-Form">
        <div class="Grid">
          <div class="Grid-item s-Width--6-12">
            <input class="Form-item -border -round" type="text" placeholder="I'm placeholder text">
          </div>
          <div class="Grid-item s-Width--6-12">
            <div class="Form-collection -round -horizontal">
              <input class="Form-item -border" type="password" placeholder="I'm placeholder text">
              <div class="Form-addon -border">Password</div>
            </div>
          </div>
          <div class="Grid-item s-Width--6-12">
            <div class="Form-item Form-item--select -round -border -hasIconRight">
              <span class="Form-item--select-text">Choose something here</span>
              <label for="select">
                <span class="Form-icon -right"><i class="IconCss -chevronDown -s"></i></span>
                <select class="Form-select" id="">
                  <option value="Tampere">Tampere</option>
                  <option value="Valkeakoski">Valkeakoski</option>
                  <option value="Hämeenlinna">Hämeenlinna</option>
                  <option value="Helsinki">Helsinki</option>
                </select>
              </label>
            </div>
          </div>

        </div>
      </form>
      <!--
       /Default separated form with grid
       -->

      <div class="Grid">

        <div class="Grid-item m-Width--6-12">
          <!--
           Vertical rounded form collection
           -->
          <form action="" class="Form Form--primary">
            <div class="Form-collection -round -vertical">
              <textarea class="Form-item -border" placeholder="I'm placeholder text"></textarea>
              <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text too">
              <button class="Form-button Button Button--primary -l -full">Form button</Button>
            </div>
          </form>
          <!--
           /Vertical rounded form collection
           -->
        </div>

        <div class="Grid-item m-Width--6-12">
          <!--
           Vertical rounded form collection with addons and button
           -->
          <form action="" class="Form Form--primary">
            <div class="Form-collection -round -vertical">
              <div class="Form-collection-item">
                <div class="Form-collection">
                  <div class="Form-addon -border">@</div>
                  <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
                </div>
              </div>
              <div class="Form-collection-item">
                <div class="Form-collection">
                  <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
                  <div class="Form-addon -border">@</div>
                </div>
              </div>
              <button class="Form-button Button Button--primary -l -full">Form button</Button>
            </div>
          </form>
          <!--
           /Vertical rounded form collection with addons and button
           -->
        </div>

      </div>

      <!--
       Horizontal rounded form collection
       -->
      <form action="" class="Form Form--primary">
        <div class="Form-collection -round -horizontal">
          <div class="Form-collection-item">
            <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
          </div>
          <div class="Form-collection-item">
            <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text too">
          </div>
          <div class="Form-collection-item">
            <button class="Form-button Button Button--primary -l -full">Form button</Button>
          </div>
        </div>
      </form>
      <!--
       /Horizontal rounded form collection
       -->

      <!--
       Horizontal rounded form collection with addons
       -->
      <form action="" class="Form Form--primary">
        <div class="Form-collection -round -horizontal">
          <div class="Form-collection-item">
            <div class="Form-collection">
              <div class="Form-addon -border -s">@</div>
              <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
            </div>
          </div>
          <div class="Form-collection-item">
            <div class="Form-collection">
              <div class="Form-addon -border -s">&#10003;</div>
              <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
            </div>
          </div>
        </div>
      </form>
      <!--
       /Horizontal rounded form collection with addons
       -->

      <!--
       Horizontal rounded form collection with addons on right and button
       -->
      <form action="" class="Form Form--primary">
        <div class="Form-collection -round -horizontal">
          <div class="Form-collection-item">
            <div class="Form-collection">
              <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
              <div class="Form-addon -s">@</div>
            </div>
          </div>
          <div class="Form-collection-item">
            <div class="Form-collection">
              <input class="Form-item -round -border" type="text" placeholder="I'm placeholder text">
              <div class="Form-addon -border -s">&#10003;</div>
            </div>
          </div>
          <div class="Form-collection-item">
            <button class="Form-button Button Button--primary -l -full">Form button</Button>
          </div>
        </div>
      </form>
      <!--
       /Horizontal rounded form collection with addons on right and button
       -->

  </div>
</div>
